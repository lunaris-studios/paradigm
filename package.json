{
	"name": "monorepo",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"bundle": "lerna run --parallel bundle",
		"compile": "lerna run --parallel compile",
		"clean": "run-s clean:packages clean:root",
		"clean:packages": "lerna run --parallel clean",
		"clean:root": "rm -rf ./*-debug* && rm -rf ./node_modules package-lock.json",
		"dev:core": "lerna bootstrap && lerna run dev --parallel --scope \"@paradigmjs/{core,icons,nine,protocol,sensors,universal}\" --stream",
		"dev:docs": "lerna bootstrap && lerna run dev --parallel --scope \"@paradigmjs/{docs,sensors,universal,util}\" --stream",
		"dev:sensors": "lerna bootstrap && lerna run dev --parallel --scope \"@paradigmjs/{sensors,universal,util}\" --stream",
		"dist": "run-s dist:libs dist:apps",
		"dist:libs": "lerna run dist --parallel --scope \"@paradigmjs/{core,icons,nine,protocol,scripts,sensors,universal,util}\"",
		"dist:docs": "lerna run dist --scope \"@paradigmjs/{core,docs,protocol,sensors,universal}\"",
		"dist:sensors": "lerna run dist --scope \"@paradigmjs/{sensors,universal}\"",
		"format": "prettier --write \"./**/*.{ts,tsx}\"",
		"format-check": "prettier --check \"./**/*.{ts,tsx}\"",
		"generate": "lerna run --parallel generate",
		"link": "lerna link",
		"lint": "lerna run --parallel lint",
		"lint-fix": "lerna run --parallel lint-fix",
		"release:libs": "run-s \"release:libs:*\"",
		"release:libs:build": "run-s bootstrap dist:libs",
		"release:libs:publish": "lerna publish",
		"run": "lerna run",
		"start": "npm run start:core",
		"start:core": "run-s bootstrap dev:core",
		"start:docs": "run-s bootstrap dev:docs",
		"test": "lerna run --parallel test",
		"verify": "npm-run-all -s compile dist:libs dist:apps -p test lint"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^1.14.0",
		"@graphql-codegen/typescript": "^1.15.4",
		"@types/history": "^4.7.6",
		"@typescript-eslint/eslint-plugin": "^3.0.1",
		"@typescript-eslint/parser": "^3.0.1",
		"babel-eslint": "10.1.0",
		"eslint": "7.1.0",
		"eslint-config-react-app": "^5.2.1",
		"eslint-plugin-flowtype": "5.1.0",
		"eslint-plugin-import": "2.20.2",
		"eslint-plugin-jsx-a11y": "6.2.3",
		"eslint-plugin-react": "7.20.0",
		"eslint-plugin-react-hooks": "4.0.2",
		"husky": "^4.2.5",
		"lerna": "^3.22.0",
		"lint-staged": "^10.2.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"ts-jest": "^25.5.1",
		"ts-loader": "^7.0.4"
	},
	"dependencies": {
		"gatsby-plugin-typescript": "^2.4.6",
		"graphql": "^15.1.0"
	}
}
